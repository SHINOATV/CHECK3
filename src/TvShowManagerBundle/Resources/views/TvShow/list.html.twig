{% extends '@TvShowManager/base.html.twig' %}

{% block content %}

    <h3>Liste - </h3> <h2> Séries : </h2>

    <table class="table table-responsive">
        <thead>
        <tr>
            <th>Nom</th> <th>Genre</th> <th>Année</th> <th>Image</th>
        </tr>
        </thead>
        <tbody>
        {% for show in tvShows %}
            <tr>
                <td>{{ show.name }}</td> <td>{{ show.type }}</td> <td>{{ show.year }}</td>
                <td><img src="{{ show.url }}" alt="{{ show.name }}" class="img-responsive"></td>
                <td>
                    <a href="{{ path('tvShowsEdit', {'tvShowName':show.name}) }}">Editer</a>
                    <div>
                        |-|
                    </div>
                    <a href="{{ path('tvShowsDel', {'tvShowName':show.name}) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}